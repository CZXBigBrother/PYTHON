input = raw_input("Enter a number or exit:\n")
while(input != 'exit'):
    try: 
        num = int(input)
    except ValueError, e:
        print "Format your input string to a number error:", e
    if num < 0:
        print 'Your number is a negative'
    elif num == 0:
        print 'Your number is zero'
    else :
        print 'Your number is plus'
    input = raw_input("Enter a number or exit:\n")

